<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>Hello World\n</text>
<text>你好小程序\n</text>

<!-- 2.selectable: true -->
<!-- 默认情况下text中的文本长按不能被选中 -->
<text selectable="{{true}}">不管是香还是臭，到我嘴里都是肉</text>

<!-- 3.space: 决定空格大小 -->
<!-- ensp：半个中文字符大小 -->
<!-- emsp：一个中文字符大小 -->
<!-- ensp：半个中文字符大小 -->
<text space="nbsp">\n你 好\n</text>
<text space="ensp">你 好\n</text>
<text space="emsp">你 好\n</text>

<!-- 4.decode属性：是否解码文本 -->
<text decode>5 &gt; 3\n</text>